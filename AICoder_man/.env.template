# AI Coder Environment Configuration Template
# Copy this file to .env and fill in your API keys

# Claude AI API Key (Required for code generation)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Optional: Additional AI API Keys
# OpenAI API Key (Optional, for enhanced embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: GitHub API Key (For repository analysis)
GITHUB_API_KEY=your_github_api_key_here

# Vector Database Configuration
VECTOR_DB_PATH=./manual_db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ai_coder.log

# Application Settings
DEFAULT_LANGUAGE=python
DEFAULT_STYLE=professional
AUTO_SAVE_GENERATED_CODE=true

# Manual Processing Settings
MAX_CHUNK_SIZE=1000
EMBEDDING_DIMENSION=768
BATCH_SIZE=100

# Claude API Settings
CLAUDE_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4000
TEMPERATURE=0.1
MIN_API_INTERVAL=2

# File Processing Settings
SUPPORTED_FORMATS=.pdf,.docx,.html,.htm,.md,.txt
MAX_FILE_SIZE_MB=500
PARALLEL_PROCESSING=true

# GUI Settings
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
THEME=default
AUTO_SCROLL_LOGS=true

# Security Settings
MASK_API_KEYS_IN_LOGS=true
ENCRYPT_SENSITIVE_MANUALS=false

# Performance Settings
CACHE_SEARCH_RESULTS=true
CACHE_TIMEOUT_SECONDS=300
MAX_SEARCH_RESULTS=20