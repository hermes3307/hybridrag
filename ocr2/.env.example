# Environment Configuration Template
# Copy this file to .env and customize as needed

# Environment (development or production)
ENV=development

# LLM Model Configuration
LLM_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
# Alternative models:
# LLM_MODEL_NAME=Qwen/Qwen2.5-3B-Instruct  # Faster, lighter
# LLM_MODEL_NAME=Qwen/Qwen2.5-1.5B-Instruct  # Very light
# LLM_MODEL_NAME=Qwen/Qwen2.5-14B-Instruct  # More accurate

USE_4BIT_QUANTIZATION=true
LLM_MAX_NEW_TOKENS=1024

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# File Processing
MAX_FILE_SIZE_MB=10
PDF_DPI=300

# Logging
LOG_LEVEL=INFO
